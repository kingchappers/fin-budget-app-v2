{
    "name": "fin-budget-app-v2",
    "version": 1,
    "runtime": {
        "name": "nodejs",
        "version": "22.x"
    },
    "build": {
        "commands": [
            "nvm use 22",
            "node --version",
            "npm ci",
            "npm run build"
        ]
    },
    "artifacts": {
        "baseDirectory": ".output/public",
        "files": [
            "**/*"
        ]
    },
    "cache": {
        "paths": [
            "node_modules/**/*"
        ]
    }
}